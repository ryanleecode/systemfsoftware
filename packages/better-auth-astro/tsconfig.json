{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "astro/client"
    ],
    "customConditions": [
      "@systemfsoftware/source"
    ]
  },
  "include": [
    "src",
    "scripts",
    "virtual.d.ts",
    "tsup.config.ts"
  ]
}
